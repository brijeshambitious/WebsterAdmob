<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brijesh.webster.news.view.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_made_with_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/tv_made_with_love_by"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkBackground"
                android:textSize="16sp" />

            <include layout="@layout/card_info" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                style="@style/card_layout_about"
                app:cardBackgroundColor="@color/colorCardView"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button4"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect"
                        android:layout_alignParentLeft="true"
                        android:backgroundTint="@color/md_grey_900"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Earn Coins By Watching Videos(Hold For 2 Second)"
                        android:onClick="startVideoAdd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                style="@style/card_layout_about"
                app:cardBackgroundColor="@color/colorCardView"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                style="@style/card_layout_about"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/colorCardView"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Coin:0"
                    android:layout_gravity="center"
                    android:textColor="@color/material_drawer_background"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                style="@style/card_layout_about"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/colorCardView"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>